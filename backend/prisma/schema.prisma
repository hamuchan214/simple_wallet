// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/client"
  previewFeatures = ["views"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  Transaction Transaction[]
  CustomTag   CustomTag[]

  @@map("user")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  userId      String   @map("user_id")
  amount      Int
  description String?
  date        DateTime
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  SystemTagsOnTransactions SystemTagsOnTransactions[]
  CustomTagsOnTransactions CustomTagsOnTransactions[]

  @@index([userId])
  @@map("transaction")
}

model SystemTag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  SystemTagsOnTransactions SystemTagsOnTransactions[]

  @@map("system_tag")
}

model CustomTag {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id")
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  CustomTagsOnTransactions CustomTagsOnTransactions[]

  @@unique([name, userId])
  @@index([userId])
  @@map("custom_tag")
}

// システムタグとトランザクションの中間テーブル
model SystemTagsOnTransactions {
  transactionId Int         @map("transaction_id")
  tagId         Int         @map("tag_id")
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  systemTag     SystemTag   @relation(fields: [tagId], references: [id])
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@id([transactionId, tagId])
  @@index([transactionId])
  @@index([tagId])
  @@map("system_tags_on_transaction")
}

// カスタムタグとトランザクションの中間テーブル
model CustomTagsOnTransactions {
  transactionId Int         @map("transaction_id")
  tagId         Int         @map("tag_id")
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  customTag     CustomTag   @relation(fields: [tagId], references: [id])
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@id([transactionId, tagId])
  @@index([transactionId])
  @@index([tagId])
  @@map("custom_tags_on_transaction")
}

// トランザクションとタグの結合ビュー
view TransactionWithTags {
  transactionId Int      @id @map("transaction_id")
  userId        String   @map("user_id")
  amount        Int
  description   String?
  date          DateTime
  systemTagId   Int?     @map("system_tag_id")
  systemTagName String?  @map("system_tag_name")
  customTagId   Int?     @map("custom_tag_id")
  customTagName String?  @map("custom_tag_name")

  @@index([userId])
  @@map("transaction_with_tags")
}
